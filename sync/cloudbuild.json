{
    "timeout": "21600s",
    "steps": [
        {
            "name": "gcr.io/cloud-builders/git",
            "args": [
                "clone",
                "--branch=${_BRANCH_NAME}",
                "https://github.com/vwt-digital/dcat-deploy.git"
            ]
        },
        {
            "name": "gcr.io/cloud-builders/gcloud",
            "dir": "dcat-deploy/sync",
            "entrypoint": "bash",
            "args": [
                "-c",
                "./run_sync.sh ${PROJECT_ID} $(gcloud secrets versions access latest --secret=${_SECRET_NAME}) ${_SERVICE_ACCOUNT} ${_ENDS_WITH}"
            ]
        }
    ],
    "substitutions": {
        "_BRANCH_NAME": "__BRANCH_NAME__",
        "_SECRET_NAME": "__SECRET_NAME__",
        "_SERVICE_ACCOUNT": "__SERVICE_ACCOUNT__",
        "_ENDS_WITH": "__ENDS_WITH__"
    }
}
